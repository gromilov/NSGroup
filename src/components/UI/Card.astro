---
const { 
  highlighted = false,
  glow = false,
  className = ''
} = Astro.props;
---

<div class={`
  relative p-8 flex flex-col rounded-2xl border
  transition-all duration-300 
  ${highlighted 
    ? 'bg-secondary/10 border-secondary/30 shadow-lg' 
    : 'bg-light/20 border-white/10 hover:bg-light/30'
  }
  ${glow ? 'shadow-secondary/20' : ''}
  ${className}
`}>
  {glow && (
    <div class="absolute inset-0 rounded-2xl bg-secondary/10 pointer-events-none" aria-hidden="true"></div>
  )}
  
  <div class="relative z-10 flex flex-col h-full">
    <slot />
  </div>
</div>